{% extends 'layouts/default.njk' %}

{% block body %}
  <div class="wrapper">
    {% include 'partials/nav.njk' %}
    <section id="main">
      <div class="container">
        <header>
          <h2>{{ project.title }}</h2>
          <div class="addon">
            <a href="" class="btn btn-danger">Excluir projeto</a>
          </div>
        </header>

        <section id="content">
          <nav>
            <div class="sessions">
              {% for section in sections %}
                <a href="/app/projects/{{ activeProject }}/sections/{{ section.id }}">
                  {{ section.title }}
                </a>
              {% endfor %}
            </div>

            <a href="" class="btn">Nova seção</a>
          </nav>

          <article>
            <form action="/app/projects/{{ project.id }}/sections/create" method="POST">
              <input type="text" name="title" placeholder="Digite o nome da seção">
              <textarea id="content" name="content" placeholder="Conteúdo da seção"></textarea>
              <button type="submit" class="btn">Salvar</button>
            </form>
          </article>
        </section>
      </div>
    </section>
  </div>
{% endblock %}
